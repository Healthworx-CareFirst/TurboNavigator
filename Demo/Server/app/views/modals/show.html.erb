<% content_for :title, "Modal navigation #2" %>

<p class="my-3">This screen was pushed on the modal stack.</p>

<p class="mb-0">Triggered via the following Path Configuration rule:</p>
<pre><code>
{
  "patterns": [
    "/modal$"
  ],
  "properties": {
    "context": "modal"
  }
}
</code></pre>

<div class="list-group list-group-flush mx-n3 sm:mx-0">
  <%= render "navigations/item",
    path: replace_modal_path,
    data: {turbo_action: :replace},
    icon: "bi-arrow-left-right",
    name: "Replace navigation",
    description: "Replace this modal screen with a new one."
  %>

  <%= link_to turbo_recede_historical_location_path, class: "list-group-item list-group-item-action d-flex py-3" do %>
    <div class="col flex-grow-0 flex-shrink-1 my-auto ps-1 pe-4">
      <i class="bi bi-arrow-left fs-1"></i>
    </div>

    <div class="w-100 mx-auto">
      <p class="fs-5 mb-0">Recede navigation</p>
      <p class="mb-0 text-muted">Pop this screen off the modal stack.</p>
    </div>

    <div class="col flex-grow-0 flex-shrink-1 my-auto">
      <i class="bi bi-chevron-right"></i>
    </div>
  <% end %>
</div>
