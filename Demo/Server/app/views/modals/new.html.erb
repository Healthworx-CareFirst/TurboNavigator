<% content_for :title, "Modal navigation" %>

<p class="my-3">This screen was presented as a modal.</p>

<p class="mb-0">Triggered via the following Path Configuration rule:</p>
<pre><code>
{
  "patterns": [
    "/new$"
  ],
  "properties": {
    "context": "modal"
  }
}
</code></pre>

<div class="list-group list-group-flush mx-n3 sm:mx-0">
  <%= render "navigations/item",
    path: navigation_path,
    icon: "bi-arrow-return-right",
    name: "Basic navigation",
    description: "Dismiss the modal and push a screen on the main stack."
  %>

  <%= link_to modal_path, class: "list-group-item list-group-item-action d-flex py-3" do %>
    <div class="col flex-grow-0 flex-shrink-1 my-auto ps-1 pe-4">
      <i class="bi bi-arrow-right fs-1"></i>
    </div>

    <div class="w-100 mx-auto">
      <p class="fs-5 mb-0">Modal navigation</p>
      <p class="mb-0 text-muted">Push a screen on the modal stack.</p>
    </div>

    <div class="col flex-grow-0 flex-shrink-1 my-auto">
      <i class="bi bi-chevron-right"></i>
    </div>
  <% end %>

  <%= link_to turbo_recede_historical_location_path, class: "list-group-item list-group-item-action d-flex py-3" do %>
    <div class="col flex-grow-0 flex-shrink-1 my-auto ps-1 pe-4">
      <i class="bi bi-arrow-down fs-1"></i>
    </div>

    <div class="w-100 mx-auto">
      <p class="fs-5 mb-0">Recede navigation</p>
      <p class="mb-0 text-muted">Dismiss this modal.</p>
    </div>

    <div class="col flex-grow-0 flex-shrink-1 my-auto">
      <i class="bi bi-chevron-right"></i>
    </div>
  <% end %>
</div>
