<% content_for :title, "Basic navigation #2" %>

<p class="my-3">Another screen pushed onto the navigation stack.</p>

<div class="list-group list-group-flush mx-n3 sm:mx-0">
  <%= link_to turbo_recede_historical_location_path, class: "list-group-item list-group-item-action d-flex py-3" do %>
    <div class="col flex-grow-0 flex-shrink-1 my-auto ps-1 pe-4">
      <i class="bi bi-arrow-left fs-1"></i>
    </div>

    <div class="w-100 mx-auto">
      <p class="fs-5 mb-0">Recede navigation</p>
      <p class="mb-0 text-muted">Pop this screen off the stack.</p>
    </div>

    <div class="col flex-grow-0 flex-shrink-1 my-auto">
      <i class="bi bi-chevron-right"></i>
    </div>
  <% end %>

  <%= link_to second_navigation_path, class: "list-group-item list-group-item-action d-flex py-3" do %>
    <div class="col flex-grow-0 flex-shrink-1 my-auto ps-1 pe-4">
      <i class="bi bi-arrow-clockwise fs-1"></i>
    </div>

    <div class="w-100 mx-auto">
      <p class="fs-5 mb-0">Visit same page</p>
      <p class="mb-0 text-muted">Reload this screen.</p>
    </div>

    <div class="col flex-grow-0 flex-shrink-1 my-auto">
      <i class="bi bi-chevron-right"></i>
    </div>
  <% end %>

  <%= link_to navigation_path, class: "list-group-item list-group-item-action d-flex py-3" do %>
    <div class="col flex-grow-0 flex-shrink-1 my-auto ps-1 pe-4">
      <i class="bi bi-arrow-left fs-1"></i>
    </div>

    <div class="w-100 mx-auto">
      <p class="fs-5 mb-0">Visit previous page</p>
      <p class="mb-0 text-muted">Pop this screen and reload previous one.</p>
    </div>

    <div class="col flex-grow-0 flex-shrink-1 my-auto">
      <i class="bi bi-chevron-right"></i>
    </div>
  <% end %>

  <%= link_to root_path, class: "list-group-item list-group-item-action d-flex py-3" do %>
    <div class="col flex-grow-0 flex-shrink-1 my-auto ps-1 pe-4">
      <i class="bi bi-arrow-bar-left fs-1"></i>
    </div>

    <div class="w-100 mx-auto">
      <p class="fs-5 mb-0">Clear all</p>
      <p class="mb-0 text-muted">Pop all screens off the stack.</p>
    </div>

    <div class="col flex-grow-0 flex-shrink-1 my-auto">
      <i class="bi bi-chevron-right"></i>
    </div>
  <% end %>
</div>
